<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/consumer.xsd">
    <consumer name="webhook.trigger.consumer" queue="webhook.trigger" connection="amqp"
              consumerInstance="Magento\Framework\MessageQueue\Consumer"
              handler="Aligent\Webhooks\Model\WebhookTriggerHandler::process"/>

    <consumer name="webhook.retry.consumer" queue="webhook.failover.retry" connection="amqp"
              consumerInstance="Magento\Framework\MessageQueue\Consumer"
              handler="Aligent\Webhooks\Model\RetryHandler::process"/>
</config>
